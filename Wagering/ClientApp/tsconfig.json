{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES2015",
        "module": "ESNext",
        "strict": true,
        "pretty": true,
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "typeRoots": ["node_modules/@types", "node_modules/vuetify/types"],
        "types": ["webpack-env", "vuetify"],
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
        "outDir": "dist/"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": ["node_modules"]
}
