@model IList<Microsoft.AspNetCore.Authentication.AuthenticationScheme>

@if (Model.Any(x => x.Name == "Facebook"))
{
    <div class="field">
        <div class="control">
            <button class="button is-fullwidth is-facebook has-text-weight-medium" name="provider" value="Facebook" type="submit">
                <span class="icon">
                    <i class="mdi mdi-facebook"></i>
                </span>
                <span style="padding-left:.2em;">
                    Facebook
                </span>
            </button>
        </div>
    </div>
}
@if (Model.Any(x => x.Name == "Google"))
{
    <div class="field">
        <div class="control">
            <button class="button is-fullwidth is-white has-text-weight-medium" name="provider" value="Google" type="submit">
                <span class="icon">
                    <img class="image is-16x16" src="~/logos/google.svg" />
                </span>
                <span style="padding-left:.2em;">
                    Google
                </span>
            </button>
        </div>
    </div>
}
@if (Model.Any(x => x.Name == "Twitter"))
{
    <div class="field">
        <div class="control">
            <button class="button is-fullwidth is-twitter has-text-weight-medium has-text-white" name="provider" value="Twitter" type="submit">
                <span class="icon">
                    <i class="mdi mdi-twitter"></i>
                </span>
                <span style="padding-left:.2em;">
                    Twitter
                </span>
            </button>
        </div>
    </div>
}