@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h1 class="title">@ViewData["Title"]</h1>
<partial name="_StatusMessage" for="StatusMessage" />
<form id="change-password-form" method="post">
    <div asp-validation-summary="All" class="has-text-danger"></div>
    <div class="field">
        <p class="control has-icons-left">
            <input asp-for="Input.OldPassword" placeholder="Old Password" class="input"/>
            <span class="icon is-left">
                <i class="mdi mdi-lock"></i>
            </span>
        </p>
        <span asp-validation-for="Input.OldPassword" class="has-text-danger"></span>
    </div>
    <div class="field">
        <p class="control has-icons-left">
            <input asp-for="Input.NewPassword" placeholder="New Password" class="input" />
            <span class="icon is-left">
                <i class="mdi mdi-lock"></i>
            </span>
        </p>
        <span asp-validation-for="Input.NewPassword" class="has-text-danger"></span>
    </div>
    <div class="field">
        <p class="control has-icons-left">
            <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password" class="input" />
            <span class="icon is-left">
                <i class="mdi mdi-lock"></i>
            </span>
        </p>
        <span asp-validation-for="Input.ConfirmPassword" class="has-text-danger"></span>
    </div>
    <div class="field">
        <div class="control">
            <button type="submit" class="button is-success is-fullwidth">Submit</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}