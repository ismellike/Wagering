@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="column is-one-third is-offset-one-third">
    <div class="box has-background-transparent">
        <h1 class="title">Log In With</h1>
        <!--Use custom buttons-->
        @if (Model.ExternalLogins.Count > 0)
        {
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                @foreach (var provider in Model.ExternalLogins)
                {
                    <button type="submit" class="button is-secondary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                }
            </form>
        }
        <form id="account" method="post" class="has-text-left">
            <div asp-validation-summary="All" class="has-text-danger"></div>
            <div class="field">
                <label asp-for="Input.Email" class="label"></label>
                <p class="control has-icons-left">
                    <input asp-for="Input.Email" class="input" />
                    <span class="icon is-left">
                        <i class="mdi mdi-email"></i>
                    </span>
                </p>
                <span asp-validation-for="Input.Email" class="help is-danger"></span>
            </div>
            <div class="field">
                <label asp-for="Input.Password" class="label is-inline"></label><a id="forgot-password" class="has-text-grey is-size-6 is-pulled-right" asp-page="./ForgotPassword">Forgot?</a>
                <p class="control has-icons-left">
                    <input asp-for="Input.Password" class="input" />
                    <span class="icon is-left">
                        <i class="mdi mdi-lock"></i>
                    </span>
                </p>
                <span asp-validation-for="Input.Password" class="help is-danger"></span>
            </div>
            <div class="field">
                <div class="control">
                    <label asp-for="Input.RememberMe" class="label">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="field">
                <div class="control has-text-right">
                    <button type="submit" class="button is-success">Log in</button>
                </div>
            </div>
        </form>
        <p>
            Not a member? <a asp-page="./Register" class="has-text-grey" asp-route-returnUrl="@Model.ReturnUrl">Register now</a>
        </p>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
