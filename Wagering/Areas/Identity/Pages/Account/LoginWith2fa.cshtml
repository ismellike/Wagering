@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<div class="columns is-mobile is-centered">
    <div class="column is-12-mobile is-10-tablet is-6-desktop is-5-widescreen is-4-fullhd">
        <div class="box has-background-transparent">
            <h1 class="title">@ViewData["Title"]</h1>
            <p class="subtitle">Your login is protected with an authenticator app. Enter your authenticator code below.</p>
            <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                <input asp-for="RememberMe" type="hidden" />
                <div asp-validation-summary="All" class="has-text-danger"></div>
                <div class="field">
                    <p class="control has-icons-left">
                        <input asp-for="Input.TwoFactorCode" placeholder="Authentication Code" class="input" autocomplete="off" />
                        <span class="icon is-left">
                            <i class="mdi mdi-two-factor-authentication"></i>
                        </span>
                    </p>
                    <span asp-validation-for="Input.TwoFactorCode" class="has-text-danger"></span>
                </div>
                <div class="level is-mobile">
                    <div class="level-left">
                        <div class="field">
                            <div class="control">
                                <label asp-for="Input.RememberMachine" class="label">
                                    <input asp-for="Input.RememberMachine" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMachine)
                                </label>
                            </div>
                        </div>
                        <div class="level-right">
                            <a id="recovery-code-login" class="has-text-grey is-size-6 is-pulled-right" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">Recovery code?</a>.
                        </div>
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <button type="submit" class="button is-success is-fullwidth">Log In</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
